{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["./src/components/*"],
      "@/domain/*": ["./src/domain/*"],
      "@/context/*": ["./src/context/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/data/*": ["./src/data/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/types/*": ["./src/types/*"],
      "@/testUtils/*": ["./src/__testUtils/*"],
      "@/components": ["./src/components"],
      "@/domain": ["./src/domain"],
      "@/context": ["./src/context"],
      "@/hooks": ["./src/hooks"],
      "@/styles": ["./src/styles"],
      "@/data": ["./src/data"],
      "@/utils": ["./src/utils"],
      "@/types": ["./src/types"],
      "@/testUtils": ["./src/__testUtils"]
    }
  },
  "references": [
    {
      "path": "../de-fend"
    },
    {
      "path": "../server"
    }
  ],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules", "cypress"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}
